<h1><%= @attraction.name %> </h1>

<% if current_user.admin? %> 
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %> 
<% else %> 
  <%= button_to "Go on this ride", {:controller => "users", :action => "update", :user => current_user, :attraction_id => @attraction.id} , :method => "patch"%> 
<% end %> 
